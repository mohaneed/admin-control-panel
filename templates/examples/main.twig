{% extends "layouts/base.twig" %}

{% block title %}Examples - Admin Panel
{% endblock %}

{% block content %}
	<div
		class="space-y-12 pb-12">
		<!-- Typography & Headings -->
		<section>
			<h2 class="text-2xl font-bold mb-6 pb-2 border-b border-gray-200">Typography</h2>
			<div class="space-y-4 bg-white p-6 rounded-lg shadow-sm">
				<h1 class="text-4xl font-bold text-gray-900">Heading 1 (text-4xl)</h1>
				<h2 class="text-3xl font-bold text-gray-900">Heading 2 (text-3xl)</h2>
				<h3 class="text-2xl font-bold text-gray-900">Heading 3 (text-2xl)</h3>
				<h4 class="text-xl font-bold text-gray-900">Heading 4 (text-xl)</h4>
				<p class="text-base text-gray-600">
					Regular paragraph text. Lorem ipsum dolor sit amet, consectetur adipiscing elit. 
					                Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
					<a href="#" class="text-blue-600 hover:text-blue-800 underline">Link Example</a>
				</p>
				<p class="text-sm text-gray-500">
					Small text (text-sm). Often used for captions or secondary information.
				</p>
			</div>
		</section>

		<!-- Buttons -->
		<section>
			<h2 class="text-2xl font-bold mb-6 pb-2 border-b border-gray-200">Buttons</h2>
			<div
				class="space-y-6 bg-white p-6 rounded-lg shadow-sm">
				<!-- Styles -->
				<div class="flex flex-wrap gap-4 items-center">
					<button class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors">
						Primary Button
					</button>
					<button class="bg-gray-800 hover:bg-gray-900 text-white font-medium py-2 px-4 rounded-md transition-colors">
						Secondary Button
					</button>
					<button class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md transition-colors">
						Danger Button
					</button>
					<button class="bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 font-medium py-2 px-4 rounded-md transition-colors">
						Outline Button
					</button>
					<button class="text-blue-600 hover:text-blue-800 font-medium py-2 px-4 transition-colors">
						Ghost / Text
					</button>
				</div>

				<!-- Sizes -->
				<div class="flex flex-wrap gap-4 items-center border-t border-gray-100 pt-4">
					<button class="bg-blue-600 text-white text-xs py-1 px-2 rounded-md">Small</button>
					<button class="bg-blue-600 text-white py-2 px-4 rounded-md">Default</button>
					<button class="bg-blue-600 text-white text-lg py-3 px-6 rounded-md">Large</button>
				</div>

				<!-- Disabled -->
				<div class="flex flex-wrap gap-4 items-center border-t border-gray-100 pt-4">
					<button disabled class="bg-blue-600 opacity-50 cursor-not-allowed text-white font-medium py-2 px-4 rounded-md">
						Disabled Primary
					</button>
					<button disabled class="bg-white border border-gray-300 opacity-50 cursor-not-allowed text-gray-700 font-medium py-2 px-4 rounded-md">
						Disabled Outline
					</button>
				</div>

				<!-- Icons -->
				<div class="flex flex-wrap gap-4 items-center border-t border-gray-100 pt-4">
					<button class="bg-blue-600 text-white font-medium py-2 px-4 rounded-md inline-flex items-center gap-2">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
							<path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15"/>
						</svg>
						With Icon
					</button>
				</div>
			</div>
		</section>

		<!-- Badges & Alerts -->
		<section>
			<h2 class="text-2xl font-bold mb-6 pb-2 border-b border-gray-200">Badges & Feedback</h2>
			<div
				class="grid grid-cols-1 md:grid-cols-2 gap-6">
				<!-- Badges -->
				<div class="bg-white p-6 rounded-lg shadow-sm space-y-4">
					<h3 class="text-lg font-semibold mb-4">Badges</h3>
					<div class="flex flex-wrap gap-2">
						<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
							Active / Success
						</span>
						<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
							Revoked / Danger
						</span>
						<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
							Warning / Pending
						</span>
						<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
							Info / Standard
						</span>
						<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
							Inactive / Default
						</span>
					</div>
				</div>

				<!-- Alerts -->
				<div class="bg-white p-6 rounded-lg shadow-sm space-y-4">
					<h3 class="text-lg font-semibold mb-4">Alerts</h3>
					<div class="p-4 rounded-md bg-green-50 text-green-700 border border-green-200">
						<strong class="font-medium">Success!</strong>
						Operation completed successfully.
					</div>
					<div class="p-4 rounded-md bg-red-50 text-red-700 border border-red-200">
						<strong class="font-medium">Error!</strong>
						Something went wrong.
					</div>
					<div class="p-4 rounded-md bg-blue-50 text-blue-700 border border-blue-200">
						<strong class="font-medium">Info:</strong>
						Please check your email.
					</div>
				</div>
			</div>
		</section>

		<!-- Forms -->
		<section class="grid grid-cols-1 md:grid-cols-2 gap-6">
			<div>
				<h2 class="text-2xl font-bold mb-6 pb-2 border-b border-gray-200">Forms</h2>
				<div class="bg-white p-6 rounded-lg shadow-sm max-w-2xl">
					<form
						class="space-y-6">
						<!-- Text Input -->
						<div>
							<label for="example-text" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
							<input type="email" id="example-text" class="w-full rounded-md border-gray-300 border p-2 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 shadow-sm" placeholder="you@example.com">
							<p class="mt-1 text-sm text-gray-500">We'll never share your email with anyone else.</p>
						</div>

						<!-- Select -->
						<div>
							<label for="example-select" class="block text-sm font-medium text-gray-700 mb-1">Role</label>
							<select id="example-select" class="w-full rounded-md border-gray-300 border p-2 focus:border-blue-500 focus:ring-1 focus:ring-blue-500 shadow-sm">
								<option>Admin</option>
								<option>Editor</option>
								<option>Viewer</option>
							</select>
						</div>

						<!-- Checkbox -->
						<div class="flex items-start">
							<div class="flex items-center h-5">
								<input id="example-checkbox" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500">
							</div>
							<div class="ml-3 text-sm">
								<label for="example-checkbox" class="font-medium text-gray-700">Remember me</label>
								<p class="text-gray-500">Save my login details for next time.</p>
							</div>
						</div>

						<!-- Toggle Switch (Custom) -->
						<div class="flex items-center">
							<label class="relative inline-flex items-center cursor-pointer">
								<input type="checkbox" value="" class="sr-only peer">
								<div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
								<span class="ml-3 text-sm font-medium text-gray-900">Toggle me</span>
							</label>
						</div>
					</form>
				</div>
			</div>
			<div>
				<h2 class="text-2xl font-bold mb-6 pb-2 border-b border-gray-200">Select2</h2>

				<div class="bg-white p-6 rounded-lg shadow-sm max-w-2xl">

					<div class="relative">
						<label for="textInput" class="form-group-label">select 2 label</label>
						<div class="relative w-full min-w-[250px] text-sm text-gray-700" id="selectBoxContainer">
							<!-- Select Box -->
							<div class="js-select-box flex items-center justify-between border border-gray-300 rounded-md p-2 cursor-pointer bg-white transition-all shadow-sm hover:border-gray-400 group">
								<input type="text" id="selectInput" class="js-select-input border-none outline-none flex-1 cursor-pointer bg-transparent w-full text-current placeholder-gray-400" placeholder="Search or select..." readonly/>
								<span class="js-arrow ml-2 text-gray-500 text-xs transition-transform duration-200">â–¼</span>
							</div>

							<!-- Dropdown -->
							<div class="js-dropdown hidden absolute top-[calc(100%+0.25rem)] left-0 right-0 border border-gray-200 rounded-md bg-white z-50 shadow-lg overflow-hidden ring-1 ring-black ring-opacity-5">
								<div class="p-2 border-b border-gray-100 ">
									<input type="text" id="searchInput" class="js-search-input w-full p-2 border border-gray-300 rounded outline-none text-sm focus:border-gray-100 focus:ring-1 focus:ring-gray-300" placeholder="Search..."/>
								</div>
								<ul
									class="js-select-list max-h-60 overflow-y-auto p-0 m-0 list-none" id="optionsList"><!-- Options will render here -->

								</ul>
							</div>
						</div>
					</div>
				</div>
			</section>
			<script src="{{ asset('assets/js/select2.js') }}"></script>
            <script src="{{ asset('assets/js/input_checker.js') }}"></script>
			<script>
				const options = [
{
value: '1',
label: 'Option One'
}, {
value: '2',
label: 'Option Two'
}, {
value: '3',
label: 'Option Three'
}, {
value: '4',
label: 'Another Option'
}
];
document.getElementById('example-text').addEventListener('keyup', () => {
    checkRegEmail([document.getElementById('example-text')]);
});

// Initialize the custom select
const mySelect = Select2('#selectBoxContainer', options, {
    defaultValue: '', // Pre-select "Option One"
    onChange: (value, item) => {
        console.log('Selection changed:', value, item);
    }
});

			</script>
		</div>
	{% endblock %}
