# =========================
# Database (MySQL)
# =========================

# Database host (usually 127.0.0.1)
DB_HOST=127.0.0.1

# Database name (must match the imported SQL schema)
DB_NAME=admin_control_panel

# Database username
DB_USER=root

# Database password
DB_PASS=your_password_here

# =========================
# Security & Crypto
# =========================
# DO NOT CHANGE WITHOUT SECURITY REVIEW
# These keys are REQUIRED for the system to work.

# Key used to generate blind indexes for emails
# Must be a secure random string (minimum 32 characters)
EMAIL_BLIND_INDEX_KEY=GENERATE_SECURE_KEY_MIN_32_CHARS

# Main encryption key used by the system
# Must be a secure random string (minimum 32 characters)
ENCRYPTION_KEY=GENERATE_SECURE_KEY_MIN_32_CHARS

# IMPORTANT:
# - These keys are NOT passwords
# - Do NOT reuse real passwords
# - Do NOT change them after first setup

# =========================
# Emergency / Recovery
# =========================
# INTERNAL USE ONLY
# DO NOT ENABLE IN DEVELOPMENT OR PRODUCTION
RECOVERY_MODE=false
