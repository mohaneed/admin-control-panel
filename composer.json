{
  "name": "maatify/admin-control-panel",
  "type": "project",
  "description": "Runnable Admin Control Panel",
  "license": "MIT",

  "require": {
    "php": "^8.2",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "ext-readline": "*",
    "ext-redis": "*",
    "maatify/psr-logger": "^1.0",
    "php-di/php-di": "^7.0",
    "phpmailer/phpmailer": "^7.0",
    "pragmarx/google2fa": "^8.0",
    "ramsey/uuid": "^4.9",
    "respect/validation": "^2.4",
    "slim/psr7": "^1.8",
    "slim/slim": "^4.15",
    "slim/twig-view": "^3.4",
    "vlucas/phpdotenv": "^5.5"
  },

  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.11"
  },

  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Maatify\\AdminKernel\\": "app/Modules/AdminKernel/",
      "Maatify\\DiagnosticsTelemetry\\": "app/Modules/DiagnosticsTelemetry/",
      "Maatify\\BehaviorTrace\\": "app/Modules/BehaviorTrace/",
      "Maatify\\AuditTrail\\": "app/Modules/AuditTrail/",
      "Maatify\\SecuritySignals\\": "app/Modules/SecuritySignals/",
      "Maatify\\DeliveryOperations\\": "app/Modules/DeliveryOperations/",
      "Maatify\\AuthoritativeAudit\\": "app/Modules/AuthoritativeAudit/",
      "Maatify\\SharedCommon\\": "app/Modules/SharedCommon/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },

  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse app --level=max"
  },

  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },

  "minimum-stability": "stable",
  "prefer-stable": true
}
