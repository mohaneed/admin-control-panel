{% extends "layouts/base.twig" %}

{% block title %}Role: {{ role.name }} | {{ ui.appName }}{% endblock %}

{% block content %}

    {# ===================================================================
       Capabilities Injection
       Computed server-side by AuthorizationService.
       JavaScript reads window.roleDetailsCapabilities â€” never infers.
       =================================================================== #}
    <script>
        window.roleDetailsCapabilities = {
            can_view_permissions:    {{ capabilities.can_view_permissions    ?? false ? 'true' : 'false' }},
            can_assign_permissions:  {{ capabilities.can_assign_permissions  ?? false ? 'true' : 'false' }},
            can_unassign_permissions:{{ capabilities.can_unassign_permissions ?? false ? 'true' : 'false' }},

            can_view_admin_profile:  {{ capabilities.can_view_admin_profile  ?? false ? 'true' : 'false' }},
            can_view_admins:         {{ capabilities.can_view_admins         ?? false ? 'true' : 'false' }},
            can_assign_admins:       {{ capabilities.can_assign_admins       ?? false ? 'true' : 'false' }},
            can_unassign_admins:     {{ capabilities.can_unassign_admins     ?? false ? 'true' : 'false' }}
        };
        window.roleDetailsId = {{ role.id }};
        console.log('ğŸ” Role Details Capabilities Injected:', window.roleDetailsCapabilities);
        console.log('ğŸ¯ Role ID:', window.roleDetailsId);
    </script>

    {# ===================================================================
       Page Header  (breadcrumb + title + status badge)
       =================================================================== #}
    <div class="flex flex-wrap items-center justify-between gap-3">
        <div class="flex items-center gap-3">
            <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100">{{ role.name }}</h2>
            {% if role.is_active == 1 %}
                <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded-full border border-green-200 dark:border-green-800">
                    Active
                </span>
            {% else %}
                <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400 rounded-full border border-red-200 dark:border-red-800">
                    Inactive
                </span>
            {% endif %}
        </div>
        <nav>
            <ol class="flex items-center gap-1.5">
                <li>
                    <a class="inline-flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors" href="{{ ui.adminUrl }}dashboard">
                        Home
                        <svg class="stroke-current" width="17" height="16" viewbox="0 0 17 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M6.0765 12.667L10.2432 8.50033L6.0765 4.33366" stroke="" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                    </a>
                </li>
                <li>
                    {% if capabilities.can_view_roles ?? false %}
                    <a class="inline-flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors" href="{{ ui.adminUrl }}roles">
                        Roles
                        <svg class="stroke-current" width="17" height="16" viewbox="0 0 17 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M6.0765 12.667L10.2432 8.50033L6.0765 4.33366" stroke="" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                    </a>
                    {% endif %}
                </li>
                <li class="text-sm text-gray-800 dark:text-gray-200">{{ role.name }}</li>
            </ol>
        </nav>
    </div>

    <div class="px-0 py-2">

        {# ================================================================
           Overview Card
           ================================================================ #}
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow dark:shadow-gray-900/50 border border-gray-200 dark:border-gray-700 mb-6 p-5">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-1">Technical Name</p>
                    <code class="text-sm font-mono bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 px-2 py-1 rounded text-gray-800 dark:text-gray-200">{{ role.name }}</code>
                </div>
                <div>
                    <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-1">Display Name</p>
                    <p class="text-sm text-gray-800 dark:text-gray-100">{{ role.display_name ?? 'â€”' }}</p>
                </div>
                <div>
                    <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-1">Description</p>
                    <p class="text-sm text-gray-600 dark:text-gray-300">{{ role.description ?? 'â€”' }}</p>
                </div>
            </div>
        </div>

        {# ================================================================
           Tab Navigation
           Logic: Ø§Ù„Ø£ÙˆÙ„ tab Ø§Ù„Ù…ØªØ§Ø­ ÙŠÙ€ start active
           Permissions â†’ Ø£ÙˆÙ„ Ù„Ùˆ `can_view_permissions`
           Admins      â†’ Ø£ÙˆÙ„ Ù„Ùˆ Ø¨Ø³ `can_view_admins` Ù…ØªØ§Ø­
           ================================================================ #}
        {% set firstActiveTab = null %}
        {% if capabilities.can_view_permissions ?? false %}
            {% set firstActiveTab = 'permissions' %}
        {% elseif capabilities.can_view_admins ?? false %}
            {% set firstActiveTab = 'admins' %}
        {% endif %}

        <div class="border-b border-gray-200 dark:border-gray-700 mb-6">
            <nav class="-mb-px flex gap-6" id="role-tabs-nav">
                {% if capabilities.can_view_permissions ?? false %}
                    <button
                            data-tab="permissions"
                            class="role-tab-btn border-b-2 pb-2 text-sm font-medium transition-colors duration-200
                           {% if firstActiveTab == 'permissions' %}active border-xl-primary text-xl-primary{% else %}border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600{% endif %}"
                    >
                        Permissions
                    </button>
                {% endif %}

                {% if capabilities.can_view_admins ?? false %}
                    <button
                            data-tab="admins"
                            class="role-tab-btn border-b-2 pb-2 text-sm font-medium transition-colors duration-200
                           {% if firstActiveTab == 'admins' %}active border-xl-primary text-xl-primary{% else %}border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600{% endif %}"
                    >
                        Admins
                    </button>
                {% endif %}
            </nav>
        </div>

        {# ================================================================
           Permissions Tab Content
           ================================================================ #}
        {% if capabilities.can_view_permissions ?? false %}
            <div id="tab-permissions" class="role-tab-content {% if firstActiveTab != 'permissions' %}hidden{% endif %}">

                {# --- Search / Filter Bar --- #}
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow dark:shadow-gray-900/50 border border-gray-200 dark:border-gray-700 mb-6">
                    <div class="px-2 py-4">
                        <form id="permissions-search-form" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                            <div>
                                <label for="perm-filter-id" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Permission ID</label>
                                <input type="text" id="perm-filter-id"
                                       class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:placeholder-gray-400"
                                       placeholder="Search by ID">
                            </div>
                            <div>
                                <label for="perm-filter-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Permission Name</label>
                                <input type="text" id="perm-filter-name"
                                       class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:placeholder-gray-400"
                                       placeholder="e.g. roles.permissions">
                            </div>
                            <div>
                                <label for="perm-filter-group" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Group</label>
                                <input type="text" id="perm-filter-group"
                                       class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:placeholder-gray-400"
                                       placeholder="e.g. roles">
                            </div>
                            <div>
                                <label for="perm-filter-assigned" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Assigned</label>
                                <select id="perm-filter-assigned"
                                        class="w-full px-3 py-2 border bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-100 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                    <option value="">All</option>
                                    <option value="1">Assigned</option>
                                    <option value="0">Not Assigned</option>
                                </select>
                            </div>
                            <div class="flex items-end space-x-1 md:col-span-4">
                                <button type="submit"
                                        class="text-xs px-4 py-1 bg-blue-600 text-white rounded-md hover:bg-white hover:text-blue-600 dark:hover:bg-blue-700 dark:hover:text-white border border-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                    Search
                                </button>
                                <button type="button" id="perm-btn-reset"
                                        class="text-xs px-4 py-1 bg-white dark:bg-gray-700 text-gray-600 dark:text-gray-300 border border-gray-600 dark:border-gray-500 rounded-md hover:bg-gray-600 dark:hover:bg-gray-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2">
                                    Reset
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                {# --- Table --- #}
                <div class="container">
                    <div id="permissions-table-container" class="w-full"></div>
                </div>
            </div>
        {% endif %}

        {# ================================================================
           Admins Tab Content
           ================================================================ #}
        {% if capabilities.can_view_admins ?? false %}
            <div id="tab-admins" class="role-tab-content {% if firstActiveTab != 'admins' %}hidden{% endif %}">

                {# --- Search / Filter Bar --- #}
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow dark:shadow-gray-900/50 border border-gray-200 dark:border-gray-700 mb-6">
                    <div class="px-2 py-4">
                        <form id="admins-search-form" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                            <div>
                                <label for="admin-filter-id" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Admin ID</label>
                                <input type="text" id="admin-filter-id"
                                       class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:placeholder-gray-400"
                                       placeholder="Search by ID">
                            </div>
                            <div>
                                <label for="admin-filter-status" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
                                <select id="admin-filter-status"
                                        class="w-full px-3 py-2 border bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-100 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                    <option value="">All</option>
                                    <option value="ACTIVE">Active</option>
                                    <option value="SUSPENDED">Suspended</option>
                                    <option value="DISABLED">Disabled</option>
                                </select>
                            </div>
                            <div>
                                <label for="admin-filter-assigned" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Assigned</label>
                                <select id="admin-filter-assigned"
                                        class="w-full px-3 py-2 border bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-100 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                    <option value="">All</option>
                                    <option value="1">Assigned</option>
                                    <option value="0">Not Assigned</option>
                                </select>
                            </div>
                            <div class="flex items-end space-x-1">
                                <button type="submit"
                                        class="text-xs px-4 py-1 bg-blue-600 text-white rounded-md hover:bg-white hover:text-blue-600 dark:hover:bg-blue-700 dark:hover:text-white border border-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                    Search
                                </button>
                                <button type="button" id="admin-btn-reset"
                                        class="text-xs px-4 py-1 bg-white dark:bg-gray-700 text-gray-600 dark:text-gray-300 border border-gray-600 dark:border-gray-500 rounded-md hover:bg-gray-600 dark:hover:bg-gray-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2">
                                    Reset
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                {# --- Table --- #}
                <div class="container">
                    <div id="admins-table-container" class="w-full"></div>
                </div>
            </div>
        {% endif %}

    </div>

{% endblock %}

{% block scripts %}
    <script src="{{ asset('assets/maatify/admin-kernel/js/callback_handler.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/useInputChecker.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/data_table.js') }}"></script>

    <script src="{{ asset('assets/maatify/admin-kernel/js/pages/role-details-tabs.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/pages/role-details-permissions.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/pages/role-details-admins.js') }}"></script>
{% endblock %}
