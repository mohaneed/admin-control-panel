{% extends "layouts/base.twig" %}

{% block title %}Roles | {{ ui.appName }}
{% endblock %}

{% block content %}
    <div class="flex flex-wrap items-center justify-between gap-3 ">
        <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100">Roles Management</h2>
        <nav>
            <ol class="flex items-center gap-1.5">
                <li>
                    <a class="inline-flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200" href="{{ ui.adminUrl }}dashboard">
                        Home
                        <svg class="stroke-current" width="17" height="16" viewbox="0 0 17 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M6.0765 12.667L10.2432 8.50033L6.0765 4.33366" stroke="" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                    </a>
                </li>
                <li class="text-sm text-gray-800 dark:text-gray-300">Roles</li>
            </ol>
        </nav>
    </div>

    {# ‚úÖ Inject capabilities for JavaScript #}
    {#
    Capabilities are computed server-side by AuthorizationService
    and control what UI elements are visible/enabled.

    Available capabilities:
    - can_view_role: Navigate to role details page (GET /roles/{id})
    - can_create: Show "Create Role" button (POST /api/roles/create)
    - can_update_meta: Show "Edit" button in actions (POST /api/roles/{id}/metadata)
    - can_rename: Show "Rename" button in actions (POST /api/roles/{id}/rename)
    - can_toggle: Show "Enable/Disable" button in actions (POST /api/roles/{id}/toggle)

    UI Rules:
    ‚ùå Twig MUST NOT check permissions by name
    ‚ùå JavaScript MUST NOT infer authorization
    ‚úÖ Backend capabilities are the single UI contract
    ‚úÖ API authorization is always enforced server-side
    #}
    <script>
        window.rolesCapabilities = {
            can_view_role: {{ capabilities.can_view_role ?? false ? 'true' : 'false' }},
            can_create: {{ capabilities.can_create ?? false ? 'true' : 'false' }},
            can_update_meta: {{ capabilities.can_update_meta ?? false ? 'true' : 'false' }},
            can_rename: {{ capabilities.can_rename ?? false ? 'true' : 'false' }},
            can_toggle: {{ capabilities.can_toggle ?? false ? 'true' : 'false' }}
        };
        console.log('üîê Roles Capabilities Injected:', window.rolesCapabilities);
    </script>

    <div class=" px-0 py-2">
        <!-- Info Alert -->
        <div class="mb-6 p-4 bg-blue-50/50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-700 rounded-lg">
            <div class="flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0 mt-0.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z"/>
                </svg>
                <div class="text-sm text-blue-800 dark:text-blue-200">
                    <p class="font-medium mb-1">Important Information:</p>
                    <ul class="space-y-1 text-blue-700 dark:text-blue-300">
                        <li>‚Ä¢ Role keys (name) are immutable and cannot be modified</li>
                        <li>‚Ä¢ Only display name and description can be updated (requires <code class="bg-blue-100 dark:bg-blue-800/50 dark:text-blue-200 px-1 rounded">roles.metadata.update</code>)</li>
                        <li>‚Ä¢ Groups are derived automatically from role names</li>
                        <li>‚Ä¢ Permission assignments and role activation are managed separately</li>
                        <li>‚Ä¢ UI capabilities control what actions you can see/perform</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Search Section -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow dark:shadow-gray-900/50 border border-gray-200 dark:border-gray-700 mb-6">
            <div class="px-2 py-4">
                <form
                        id="roles-search-form" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <!-- Role ID Filter -->
                    <div>
                        <label for="filter-role-id" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                            Role ID
                        </label>
                        <input type="text" id="filter-role-id" class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 dark:placeholder-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Search by ID">
                    </div>

                    <!-- Role Name Filter -->
                    <div>
                        <label for="filter-role-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                            Role Name
                        </label>
                        <input type="text" id="filter-role-name" class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 dark:placeholder-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. admins.manage">
                    </div>

                    <!-- Group Filter -->
                    <div>
                        <label for="filter-group" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                            Group
                        </label>
                        <input type="text" id="filter-group" class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 dark:placeholder-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. admins">
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex items-end space-x-1">
                        <button type="submit" class="text-sm px-4 py-1 bg-sky-600 dark:bg-sky-700 text-white rounded-md hover:bg-white dark:hover:bg-gray-800 hover:text-sky-600 dark:hover:text-sky-400 border dark:border-sky-700 hover:border-sky-600 dark:hover:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2 transition-all duration-300">
                            Search
                        </button>
                        <button type="button" id="btn-reset" class="text-sm px-4 py-1 bg-white dark:bg-gray-700 text-gray-600 dark:text-gray-300 border border-gray-600 dark:border-gray-600 rounded-md hover:bg-gray-600 dark:hover:bg-gray-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2 transition-all duration-300">
                            Reset
                        </button>
                        {# ‚úÖ Create button only shown if user has permission #}
                        {% if capabilities.can_create ?? false %}
                            <button type="button" id="btn-create-role" class="text-xs px-1 py-2 bg-green-600 dark:bg-green-700 text-white rounded-md hover:bg-white dark:hover:bg-gray-800 hover:text-green-600 dark:hover:text-green-400 border border-green-600 dark:border-green-700 dark:hover:border-green-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 inline-flex items-center gap-1 transition-all duration-300">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                                </svg>
                                Create Role
                            </button>
                        {% endif %}
                    </div>
                </form>
            </div>
        </div>

        <!-- Table Container -->
        <div class="container mt-6">
            <div id="table-container" class="w-full"></div>
        </div>
    </div>

    <!-- Create Role Modal -->
    <div id="create-role-modal" class="hidden fixed inset-0 bg-gray-50/10 dark:bg-gray-900/40 backdrop-blur-sm z-[99999] flex items-center justify-center p-4">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto border border-transparent dark:border-gray-700">
            <!-- Modal Header -->
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/50">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <div class="flex items-center justify-center w-10 h-10 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-600 dark:text-blue-400">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100">Create New Role</h3>
                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-0.5">Create a new technical role with optional metadata</p>
                        </div>
                    </div>
                    <button type="button" id="close-create-modal-btn" class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Modal Body -->
            <form id="create-role-form" class="px-6 py-6">
                <!-- Error/Success Message -->
                <div id="create-modal-message" class="hidden mb-4"></div>

                <!-- Important Info -->
                <div class="mb-6 p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-700 rounded-lg">
                    <div class="flex items-start gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0 mt-0.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z"/>
                        </svg>
                        <div class="text-sm text-blue-800 dark:text-blue-200">
                            <p class="font-medium mb-1">Role Creation Rules:</p>
                            <ul class="space-y-1 text-blue-700 dark:text-blue-300 text-xs">
                                <li>‚Ä¢ Technical name is <strong>immutable</strong> after creation</li>
                                <li>‚Ä¢ Format: <code class="bg-blue-100 dark:bg-blue-800/50 dark:text-blue-200 px-1 rounded">group.action</code> (e.g., admins.manage)</li>
                                <li>‚Ä¢ Role is created as <strong>active</strong> by default</li>
                                <li>‚Ä¢ No permissions or admins are assigned automatically</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Form Fields -->
                <div class="space-y-5">
                    <!-- Role Name (Required) -->
                    <div>
                        <label for="create-role-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Role Name (Technical Key)
                            <span class="text-red-500">*</span>
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 0 1 3 3m3 0a6 6 0 0 1-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1 1 21.75 8.25Z"/>
                                </svg>
                            </div>
                            <input
                                    type="text"
                                    id="create-role-name"
                                    required
                                    pattern="^[a-z][a-z0-9_.\-]*$"
                                    minlength="3"
                                    maxlength="190"
                                    class="w-full pl-10 pr-4 py-3 text-sm font-mono border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 dark:placeholder-gray-400 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
                                    placeholder="e.g., admins.manage or roles.create"
                            >
                        </div>
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                            Lowercase letters, numbers, dots, dashes, and underscores only.
                            Format: <code class="dark:bg-gray-900/50 px-1 rounded">group.action</code>
                        </p>
                    </div>

                    <!-- Display Name (Optional) -->
                    <div>
                        <label for="create-display-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Display Name
                            <span class="text-xs text-gray-500 dark:text-gray-400 font-normal">(Optional)</span>
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
                                </svg>
                            </div>
                            <input
                                    type="text"
                                    id="create-display-name"
                                    maxlength="128"
                                    class="w-full pl-10 pr-4 py-3 text-sm border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 dark:placeholder-gray-400 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
                                    placeholder="e.g., Admin Management"
                            >
                        </div>
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">User-friendly label for UI display</p>
                    </div>

                    <!-- Description (Optional) -->
                    <div>
                        <label for="create-description" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Description
                            <span class="text-xs text-gray-500 dark:text-gray-400 font-normal">(Optional)</span>
                        </label>
                        <div class="relative">
                            <div class="absolute top-3 left-3 pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z"/>
                                </svg>
                            </div>
                            <textarea
                                    id="create-description"
                                    rows="4"
                                    maxlength="255"
                                    class="w-full pl-10 pr-4 py-3 text-sm border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 dark:placeholder-gray-400 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all resize-none"
                                    placeholder="e.g., Full access to admin management features"
                            ></textarea>
                        </div>
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Help text explaining what this role provides</p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex items-center justify-end gap-3 mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <button
                            type="button"
                            id="cancel-create-btn"
                            class="px-6 py-2 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-all duration-200"
                    >
                        Cancel
                    </button>
                    <button
                            type="submit"
                            id="save-create-btn"
                            class="inline-flex items-center gap-2 px-6 py-2 bg-blue-600 dark:bg-blue-600 text-white rounded-lg hover:bg-blue-700 dark:hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 shadow-sm hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                        </svg>
                        <span>Create Role</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Rename Role Modal -->
    <div id="rename-role-modal" class="hidden fixed inset-0 bg-black/50 dark:bg-black/70 z-[99999] flex items-center justify-center p-4">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto border border-transparent dark:border-gray-700">
            <!-- Modal Header -->
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/50">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <div class="flex items-center justify-center w-10 h-10 bg-purple-100 dark:bg-purple-900/30 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-purple-600 dark:text-purple-400">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21 3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100">Rename Role</h3>
                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-0.5">Change the technical key for this role</p>
                        </div>
                    </div>
                    <button type="button" id="close-rename-modal-btn" class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Modal Body -->
            <form id="rename-role-form" class="px-6 py-6">
                <!-- Error/Success Message -->
                <div id="rename-modal-message" class="hidden mb-4"></div>

                <!-- HIGH-IMPACT Warning -->
                <div class="mb-6 p-4 bg-red-50 dark:bg-red-900/20 border-2 border-red-300 dark:border-red-800 rounded-lg">
                    <div class="flex items-start gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-red-600 dark:text-red-400 flex-shrink-0 mt-0.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
                        </svg>
                        <div class="text-sm text-red-800 dark:text-red-300">
                            <p class="font-bold mb-2">‚ö†Ô∏è HIGH-IMPACT OPERATION</p>
                            <ul class="space-y-1 text-red-700 dark:text-red-400 text-xs">
                                <li>‚Ä¢ <strong>All existing bindings remain intact</strong> (role-permission, admin-role)</li>
                                <li>‚Ä¢ Application code referencing the old name will break</li>
                                <li>‚Ä¢ This operation should be rare and coordinated</li>
                                <li>‚Ä¢ Use only for correcting mistakes or refactoring</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Current Role Info (Read-only) -->
                <div class="mb-6 p-4 bg-gray-50 dark:bg-gray-700/50 border border-gray-200 dark:border-gray-600 rounded-lg">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Role ID</label>
                            <div id="rename-role-id" class="text-sm font-mono text-gray-800 dark:text-gray-200"></div>
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Current Name</label>
                            <div id="rename-current-name" class="text-sm font-mono text-gray-800 dark:text-gray-100 font-semibold"></div>
                        </div>
                    </div>
                </div>

                <!-- New Name Field -->
                <div class="space-y-5">
                    <div>
                        <label for="rename-new-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            New Role Name <span class="text-red-500">*</span>
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 0 1 3 3m3 0a6 6 0 0 1-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1 1 21.75 8.25Z"/>
                                </svg>
                            </div>
                            <input
                                    type="text"
                                    id="rename-new-name"
                                    required
                                    pattern="^[a-z][a-z0-9_.\-]*$"
                                    minlength="3"
                                    maxlength="190"
                                    class="w-full pl-10 pr-4 py-3 text-sm font-mono border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 dark:placeholder-gray-400 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all"
                                    placeholder="e.g., new.role.name"
                            >
                        </div>
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                            Must follow same format as original: lowercase letters, numbers, dots, dashes, underscores
                        </p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex items-center justify-end gap-3 mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <button
