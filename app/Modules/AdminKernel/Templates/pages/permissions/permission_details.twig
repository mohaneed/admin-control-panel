{% extends "layouts/base.twig" %}

{% block title %}Permission: {{ permission.name }} | {{ ui.appName }}{% endblock %}

{% block content %}

    {# ===================================================================
       Capabilities Injection
       Computed server-side by AuthorizationService.
       JavaScript reads window.permissionDetailsCapabilities ‚Äî never infers.
       =================================================================== #}
    <script>
        window.permissionDetailsCapabilities = {
            // permissions url (breadcrumbs) GET /permissions
            can_view_permissions: {{ capabilities.can_view_permissions ?? false ? 'true' : 'false' }},

            // roles tab (roles table) POST /api/permissions/{permissionId}/roles/query
            can_view_roles_tab:   {{ capabilities.can_view_roles_tab   ?? false ? 'true' : 'false' }},

            // admins tab (admins table) POST /api/permissions/{permissionId}/admins/query
            can_view_admins_tab:  {{ capabilities.can_view_admins_tab  ?? false ? 'true' : 'false' }},

            // roles url (direct role table) GET /roles/{id:[0-9]+}
            can_view_role_details: {{ capabilities.can_view_role_details ?? false ? 'true' : 'false' }},

            // admins url (direct admin table) GET /admins/{id:[0-9]+}/profile
            can_view_admin_profile: {{ capabilities.can_view_admin_profile ?? false ? 'true' : 'false' }}
        };

        window.permissionDetailsId = {{ permission.id }};
        console.log('üîê Permission Details Capabilities:', window.permissionDetailsCapabilities);
        console.log('üéØ Permission ID:', window.permissionDetailsId);
    </script>

    {# ===================================================================
       Page Header (breadcrumb + title)
       =================================================================== #}
    <div class="flex flex-wrap items-center justify-between gap-3 mb-6">
        <div class="flex items-center gap-3">
            <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100">{{ permission.name }}</h2>
        </div>

        <nav>
            <ol class="flex items-center gap-1.5">
                <li>
                    <a class="inline-flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors"
                       href="{{ ui.adminUrl }}dashboard">
                        Home
                        <svg class="stroke-current" width="17" height="16" viewBox="0 0 17 16" fill="none">
                            <path d="M6.0765 12.667L10.2432 8.50033L6.0765 4.33366"
                                  stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </a>
                </li>

                {% if capabilities.can_view_permissions ?? false %}
                    <li>
                        <a class="inline-flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors"
                           href="{{ ui.adminUrl }}permissions">
                            Permissions
                            <svg class="stroke-current" width="17" height="16" viewBox="0 0 17 16" fill="none">
                                <path d="M6.0765 12.667L10.2432 8.50033L6.0765 4.33366"
                                      stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </a>
                    </li>
                {% endif %}

                <li class="text-sm text-gray-800 dark:text-gray-200">{{ permission.name }}</li>
            </ol>
        </nav>
    </div>

    {# ===================================================================
       Overview Card
       =================================================================== #}
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow dark:shadow-gray-900/50 border border-gray-200 dark:border-gray-700 mb-6 p-5">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Technical Name</p>
                <code class="text-sm font-mono bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 px-2 py-1 rounded text-gray-800 dark:text-gray-200">
                    {{ permission.name }}
                </code>
            </div>

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Group</p>
                <p class="text-sm text-gray-800 dark:text-gray-100">{{ permission.group }}</p>
            </div>

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Display Name</p>
                <p class="text-sm text-gray-800 dark:text-gray-100">{{ permission.display_name ?? '‚Äî' }}</p>
            </div>

            <div>
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Created At</p>
                <p class="text-sm text-gray-600 dark:text-gray-300">{{ permission.created_at }}</p>
            </div>

            <div class="md:col-span-4 border-t dark:border-gray-700 pt-4 mt-2">
                <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Description</p>
                <p class="text-sm text-gray-600 dark:text-gray-300">{{ permission.description ?? '‚Äî' }}</p>
            </div>
        </div>
    </div>

    {# ===================================================================
       Tabs Navigation
       =================================================================== #}
    {% set firstActiveTab = null %}
    {% if capabilities.can_view_roles_tab ?? false %}
        {% set firstActiveTab = 'roles' %}
    {% elseif capabilities.can_view_admins_tab ?? false %}
        {% set firstActiveTab = 'admins' %}
    {% endif %}

    <div class="border-b border-gray-200 dark:border-gray-700 mb-6">
        <nav class="-mb-px flex gap-6" id="permission-tabs-nav">

            {% if capabilities.can_view_roles_tab ?? false %}
                <button
                        data-tab="roles"
                        class="permission-tab-btn border-b-2 pb-2 text-sm font-medium transition-colors duration-200
                    {% if firstActiveTab == 'roles' %}
                        border-blue-600 text-blue-600
                    {% else %}
                        border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600
                    {% endif %}">
                    Roles Using This Permission
                </button>
            {% endif %}

            {% if capabilities.can_view_admins_tab ?? false %}
                <button
                        data-tab="admins"
                        class="permission-tab-btn border-b-2 pb-2 text-sm font-medium transition-colors duration-200
                    {% if firstActiveTab == 'admins' %}
                        border-blue-600 text-blue-600
                    {% else %}
                        border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600
                    {% endif %}">
                    Admin Direct Overrides
                </button>
            {% endif %}

        </nav>
    </div>

    {# ===================================================================
       Roles Tab
       =================================================================== #}
    {% if capabilities.can_view_roles_tab ?? false %}
        <div id="tab-roles" class="permission-tab-content {% if firstActiveTab != 'roles' %}hidden{% endif %}">

            {# Search Form #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow dark:shadow-gray-900/50 border border-gray-200 dark:border-gray-700 mb-4">
                <div class="px-4 py-4">
                    <form id="roles-search-form" class="grid grid-cols-1 md:grid-cols-4 gap-4">

                        {# Role ID Filter #}
                        <div>
                            <label for="role-filter-id" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                                Role ID
                            </label>
                            <input type="text" id="role-filter-id"
                                   class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:placeholder-gray-400"
                                   placeholder="Search by ID">
                        </div>

                        {# Role Name Filter #}
                        <div>
                            <label for="role-filter-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                                Role Name
                            </label>
                            <input type="text" id="role-filter-name"
                                   class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:placeholder-gray-400"
                                   placeholder="Search by name">
                        </div>

                        {# Group Filter #}
                        <div>
                            <label for="role-filter-group" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                                Group
                            </label>
                            <input type="text" id="role-filter-group"
                                   class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:placeholder-gray-400"
                                   placeholder="Search by group">
                        </div>

                        {# Action Buttons #}
                        <div class="flex items-end space-x-2">
                            <button type="submit"
                                    class="text-xs px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-white hover:text-blue-600 dark:hover:bg-blue-700 dark:hover:text-white border border-blue-600 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                Search
                            </button>
                            <button type="button" id="role-btn-reset"
                                    class="text-xs px-4 py-2 bg-white dark:bg-gray-700 text-gray-600 dark:text-gray-300 border border-gray-600 dark:border-gray-500 rounded-md hover:bg-gray-600 dark:hover:bg-gray-600 hover:text-white transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2">
                                Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            {# Table Container #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow dark:shadow-gray-900/50 border border-gray-200 dark:border-gray-700 p-4">
                <div id="roles-table-container"></div>
            </div>
        </div>
    {% endif %}

    {# ===================================================================
       Admin Overrides Tab
       =================================================================== #}
    {% if capabilities.can_view_admins_tab ?? false %}
        <div id="tab-admins" class="permission-tab-content {% if firstActiveTab != 'admins' %}hidden{% endif %}">

            {# Search Form #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow dark:shadow-gray-900/50 border border-gray-200 dark:border-gray-700 mb-4">
                <div class="px-4 py-4">
                    <form id="admins-search-form" class="grid grid-cols-1 md:grid-cols-3 gap-4">

                        {# Admin ID Filter #}
                        <div>
                            <label for="admin-filter-id" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                                Admin ID
                            </label>
                            <input type="text" id="admin-filter-id"
                                   class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:placeholder-gray-400"
                                   placeholder="Search by ID">
                        </div>

                        {# Override Type Filter #}
                        <div>
                            <label for="admin-filter-override" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                                Override Type
                            </label>
                            <select id="admin-filter-override"
                                    class="w-full px-3 py-2 border bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-100 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                                <option value="">All</option>
                                <option value="1">Allow</option>
                                <option value="0">Deny</option>
                            </select>
                        </div>

                        {# Action Buttons #}
                        <div class="flex items-end space-x-2">
                            <button type="submit"
                                    class="text-xs px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-white hover:text-blue-600 dark:hover:bg-blue-700 dark:hover:text-white border border-blue-600 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                Search
                            </button>
                            <button type="button" id="admin-btn-reset"
                                    class="text-xs px-4 py-2 bg-white dark:bg-gray-700 text-gray-600 dark:text-gray-300 border border-gray-600 dark:border-gray-500 rounded-md hover:bg-gray-600 dark:hover:bg-gray-600 hover:text-white transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2">
                                Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            {# Table Container #}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow dark:shadow-gray-900/50 border border-gray-200 dark:border-gray-700 p-4">
                <div id="admins-table-container"></div>
            </div>
        </div>
    {% endif %}

{% endblock %}

{% block scripts %}
    <script src="{{ asset('assets/maatify/admin-kernel/js/data_table.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/pages/permission-details-tabs.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/pages/permission-details-roles.js') }}"></script>
    <script src="{{ asset('assets/maatify/admin-kernel/js/pages/permission-details-admins.js') }}"></script>
{% endblock %}
